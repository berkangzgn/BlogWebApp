<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to "Word Life", root_path, class: "navbar-brand", id: "logo" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1 ">
      <div class="col-md-4">
        <ul class="nav navbar-nav">
          <li><%= link_to "Articles", articles_path %></li>
          <li><%= link_to "Create Article", new_article_path %></li>
        </ul>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Log out', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Log in', login_path %></li>
              <li><%= link_to 'New Account', signup_path %></li>
            </ul>
          </li>
        <% end %>
        <li><%= link_to 'Users List', users_path %></li>

        <div class="mode">
          <h4 class="change" title="Start Dark Mode">🌙️</h4>
        </div>

        <script>
            $( ".change" ).on("click", function() {
                if( $( "body" ).hasClass( "dark" )) {
                    $( "body" ).removeClass( "dark" );
                    $( ".change" ).text( "🌙️" );
                } else {
                    $( "body" ).addClass( "dark" );
                    $( ".change" ).text( "☀️" );
                }
            });
        </script><!-- User controlled dark mode javascript codes-->
      </ul><!-- /.navbar-right-->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>