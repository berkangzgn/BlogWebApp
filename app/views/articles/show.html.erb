<% if @article.user.articles.present? %>
  <ul class="listing">
    <div class="row" align="center">
      <div class="col-md-4 col-md-offset-4">
        <%= link_to gravatar_for(@article.user), user_path(@article.user), size: 40 %>
        <h1><%= @article.user.username %>'s Account</h1>
        <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
      </div>
    </div>
  </ul>
<% end %>

<div class="well col-xs-8 col-xs-offset-2">
  <h2 align="center">Title: <%= @article.title %></h2><hr>

  <h4 class="center">Description: <%= simple_format(@article.description) %></h4>

  <div class="article-actions">
    <% if creator? %>
      <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-info" %>
      <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    <% else %>
      <%= link_to "Back", articles_path, class: "btn btn-xs btn-success" %>
    <% end %>
  </div>
</div>